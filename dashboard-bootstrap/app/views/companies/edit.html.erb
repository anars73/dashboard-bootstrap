<%= form_for @company do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit 'Update' %>

    <li><%= link_to "View/Edit employees", edit_company_employee_path(@company) %></li>
    <%= link_to 'Back', companies_path %>
<% end %>
